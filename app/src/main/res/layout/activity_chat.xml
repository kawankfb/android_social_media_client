<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"
    android:layout_height="match_parent"
    tools:context=".ChatActivity">

    <Toolbar
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/chatToolbar">

    </Toolbar>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/post_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chatToolbar"
        android:layout_above="@id/sendLayout"
        />
    <TextView
        android:id="@+id/noPostFoundTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chatToolbar"
        android:layout_above="@id/sendLayout"
        android:visibility="invisible"
        android:text="No Results Found"
        android:textStyle="bold"
        android:textSize="25sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:id="@+id/sendLayout"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginBottom="2sp"

        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:src="@drawable/baseline_attach_file_48"
            android:padding="5sp"
            android:onClick="sendPost"
            android:background="@drawable/login_signup_button"/>
        <EditText
            android:layout_width="0dp"
            android:id="@+id/postEditText"
            android:layout_weight="0.9"
            android:textColor="@color/textColor"
            android:background="@color/editTextBackground"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:src="@drawable/baseline_send_48"
            android:padding="5sp"
            android:onClick="sendPost"
            android:background="@drawable/login_signup_button"/>
    </LinearLayout>
</RelativeLayout>