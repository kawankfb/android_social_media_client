<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".ShowDiscussionInformationActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="?attr/actionBarSize"
        app:title="Discussion Information"
        android:background="@color/selectedTextview"
        android:id="@+id/showDiscussionToolbar">

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/showDiscussionToolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_margin="20sp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:id="@+id/showDiscussionImageView"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:minHeight="100sp"
                android:minWidth="100sp"
                android:layout_toEndOf="@id/showDiscussionImageView"
                android:layout_margin="20sp"
                android:textSize="20sp"
                android:gravity="center"
                android:background="@drawable/item_list_bg"
                android:layout_alignParentTop="true"
                android:id="@+id/showDiscussionNameTextView"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:minHeight="20sp"
                android:minWidth="100sp"
                android:background="@drawable/item_list_bg"
                android:layout_margin="20sp"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_below="@id/showDiscussionNameTextView"
                android:id="@+id/showDiscussionBiographyTextView"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="10sp"
                android:gravity="start"
                android:layout_alignParentStart="true"
                android:textColor="@color/textColor"
                android:id="@+id/discussionJoinTimeText"
                android:layout_below="@id/showDiscussionBiographyTextView"
                android:onClick="reportThisDiscussion"
                android:text="@string/created_at"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="20sp"
                android:minWidth="100sp"
                android:layout_toEndOf="@id/discussionJoinTimeText"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="50sp"
                android:gravity="center"
                android:id="@+id/showDiscussionJoinTime"
                android:background="@drawable/item_list_bg"
                android:textColor="@color/textColor"
                android:layout_below="@id/showDiscussionBiographyTextView"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginHorizontal="50sp"
                android:gravity="center"
                android:background="@drawable/login_signup_button"
                android:textColor="@color/colorBackground"
                android:layout_below="@id/showDiscussionJoinTime"
                android:onClick="reportThisDiscussion"
                android:text="@string/report_this_discussion"/>

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>