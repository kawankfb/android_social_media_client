<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingBottom="2dp"
    android:layout_margin="0dp"
    android:paddingEnd="25sp"
    android:paddingStart="25sp"
    android:background="@color/colorBackground"
    android:layout_height="wrap_content"
    android:minHeight="75sp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingBottom="2dp"
        android:layout_margin="0dp"
        android:id="@+id/chatRelativeLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/colorBackground"
        android:layout_height="wrap_content"
        android:minHeight="75sp"
        android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="60sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorBackground"
        android:id="@+id/chat_user_profile_layout"
        android:layout_height="60sp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:id="@+id/chat_user_profile_picture"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/noUserProfileTextView"
            android:textSize="25sp"
            android:gravity="center"
            android:visibility="visible"
            android:textColor="#FFFFFF"
            android:background="@drawable/profile_default"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="75sp"
        android:id="@+id/chat_text_layout"
        android:minWidth="100sp"
        android:layout_margin="5sp"
        android:padding="10sp"
        android:background="@drawable/chat_background"
        android:layout_toEndOf="@id/chat_user_profile_layout"
        android:layout_alignParentTop="true"
        >
        <TextView
            android:layout_width="match_parent"
            android:gravity="left"
            android:minWidth="100sp"
            android:textSize="18sp"
            android:autoLink="web|email|phone"
            android:layout_margin="5sp"
            android:minHeight="50sp"
            android:textStyle="bold"
            android:id="@+id/post_text"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:minHeight="15sp"
            android:layout_below="@id/post_text"
            android:text="23:59"
            android:gravity="end"
            android:layout_margin="1sp"
            android:textSize="12sp"
            android:textColor="@color/hintColor"
            android:textStyle="bold"
            android:id="@+id/post_last_edit_time"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingBottom="2dp"
        android:layout_margin="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/personal_chatRelativeLayout"
        android:background="@color/colorBackground"
        android:layout_height="wrap_content"
        android:minHeight="75sp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="60sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@color/colorBackground"
            android:id="@+id/personal_chat_user_profile_layout"
            android:layout_height="60sp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_height="match_parent"
                android:visibility="invisible"
                android:id="@+id/personal_chat_user_profile_picture"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/personal_noUserProfileTextView"
                android:textSize="25sp"
                android:gravity="center"
                android:visibility="visible"
                android:textColor="#FFFFFF"
                android:background="@drawable/profile_default"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="75sp"
            android:id="@+id/personal_chat_text_layout"
            android:minWidth="100sp"
            android:layout_margin="5sp"
            android:padding="10sp"
            android:background="@drawable/personal_chat_background"
            android:layout_toStartOf="@id/personal_chat_user_profile_layout"
            android:layout_alignParentTop="true"
            >
            <TextView
                android:layout_width="match_parent"
                android:gravity="left"
                android:minWidth="100sp"
                android:textSize="18sp"
                android:layout_margin="5sp"
                android:minHeight="50sp"
                android:autoLink="web|email|phone"
                android:textStyle="bold"
                android:id="@+id/personal_post_text"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:minHeight="15sp"
                android:layout_below="@id/personal_post_text"
                android:text="23:59"
                android:gravity="start"
                android:layout_margin="1sp"
                android:textSize="12sp"
                android:textColor="@color/hintColor"
                android:textStyle="bold"
                android:id="@+id/personal_post_last_edit_time"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
