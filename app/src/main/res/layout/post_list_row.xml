<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingBottom="2dp"
    android:layout_margin="0dp"
    android:background="#ede7f6"
    android:layout_height="wrap_content"
    android:minHeight="75sp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="75sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/chat_user_profile_layout"
        android:layout_height="75sp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:id="@+id/chat_user_profile_picture"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/noUserProfileTextView"
            android:textSize="25sp"
            android:gravity="center"
            android:visibility="visible"
            android:textColor="#FFFFFF"
            android:background="@drawable/profile_default"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="75sp"
        android:id="@+id/chat_text_layout"
        android:minWidth="100sp"
        android:padding="10sp"
        android:background="@color/editTextBackgroundUnfocused"
        android:layout_toEndOf="@id/chat_user_profile_layout"
        android:layout_alignParentTop="true"
        >
        <TextView
            android:layout_width="match_parent"
            android:gravity="left"
            android:minWidth="100sp"
            android:textSize="25sp"
            android:minHeight="75sp"
            android:textStyle="bold"
            android:id="@+id/post_text"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:height="15sp"
            android:layout_below="@id/post_text"
            android:text="23:59"
            android:gravity="end"
            android:textSize="15sp"
            android:textColor="@color/hintColor"
            android:textStyle="bold"
            android:id="@+id/post_last_edit_time"
            android:layout_height="wrap_content"/>
    </RelativeLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/empty_space"
        android:minWidth="10sp"
        android:layout_toEndOf="@id/chat_text_layout"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />
</RelativeLayout>
