<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingBottom="2dp"
    android:layout_margin="0dp"
    android:background="#ede7f6"
    android:layout_height="75sp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="0sp"
        android:padding="5sp"
        android:background="@color/colorBackground"
    android:layout_weight="0.2">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:id="@+id/discussion_profile_picture"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noDiscussionProfileTextView"
            android:textSize="20sp"
            android:gravity="center"
            android:visibility="visible"
            android:textColor="#FFFFFF"
            android:background="@drawable/profile_default"

            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorBackground"
        android:layout_weight="0.8">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="0.6"
            android:gravity="start"
            android:textSize="25sp"
            android:textStyle="bold"
            android:id="@+id/discussion_title_text"
            android:layout_height="0sp"/>
        <TextView
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_weight="0.4"
            android:textSize="18sp"
            android:visibility="invisible"
            android:text="yo call me bro"
            android:id="@+id/discussion_last_message"
            android:layout_height="0sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorBackground"
        android:layout_weight="0.12">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="0.6"
            android:text="23:59"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/hintColor"
            android:textStyle="bold"
            android:visibility="invisible"
            android:id="@+id/discussion_last_message_time"
            android:layout_height="0sp"/>
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_weight="0.4"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="999+"
            android:visibility="invisible"
            android:textColor="@color/hintColor"
            android:id="@+id/discussion_number_of_unread_messages"
            android:layout_height="0sp"/>
    </LinearLayout>
</LinearLayout>
